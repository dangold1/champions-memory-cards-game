<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_manu_wp"
    android:id="@+id/main_activity_relative_layout">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:importantForAccessibility="no"
            android:src="@drawable/logo" />

        <Button
            android:id="@+id/startGame"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/start"
            android:onClick="startFromBegining"/>

        <Button
            android:id="@+id/survival_mode"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/survival_mode"
            android:onClick="survivalMode"/>

        <Button
            android:id="@+id/one_on_one_mode"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/one_vs_one"
            android:onClick="oneOnOne"/>

        <Button
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/choose_level"
            android:id="@+id/choose_level"
            android:onClick="selectLevelDialogOpen"/>

        <Button
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/championsboard"
            android:id="@+id/leader_board"
            android:onClick="moveToChampionsTableActivity"/>

        <ImageView
            android:id="@+id/levelLoader"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/dif"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:scaleType="fitXY"
            android:layout_marginTop="20dp"
            android:src="@drawable/difficulty"
            android:importantForAccessibility="no"/>

        <Button
            android:id="@+id/easy"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/easy"
            android:onClick="chooseDiffculty"/>

        <Button
            android:id="@+id/settings_main_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/settings_icon"
            android:onClick="openSettings"/>

        <Button
            android:id="@+id/exit"
            android:background="@drawable/exit"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:onClick="exitGame"/>

    </LinearLayout>


</RelativeLayout>